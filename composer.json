{
    "name": "farizfadian/phpcrypt",
    "description": "Jasypt-like encryption library for PHP - Encrypt your configuration with ENC(...) pattern",
    "version": "1.0.0",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Fariz Fadian",
            "email": "farislash@gmail.com"
        }
    ],
    "keywords": [
        "encryption",
        "jasypt",
        "configuration",
        "security",
        "aes",
        "spring-boot",
        "config-encryption",
        "laravel",
        "symfony"
    ],
    "homepage": "https://github.com/farizfadian/phpcrypt",
    "support": {
        "issues": "https://github.com/farizfadian/phpcrypt/issues",
        "source": "https://github.com/farizfadian/phpcrypt"
    },
    "require": {
        "php": ">=8.1",
        "ext-openssl": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "PHPCrypt\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PHPCrypt\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage"
    },
    "bin": [
        "bin/phpcrypt"
    ],
    "minimum-stability": "stable",
    "prefer-stable": true
}
